<div class="bg-white h-full shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h2 class="text-center text-lg font-bold">Seach cities closest to you</h2>
  <%= form_for @search, url: result_path, html: { class: "flex flex-col" }, remote: true do |f| %>

    <%= f.label :latitude, "latitude", class: "block text-gray-700 text-sm font-bold mb-1 mt-3" %>
    <%= f.number_field :latitude, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %> 
    <% if @search.errors[:latitude] .present? %>
      <p class="text-red-500 text-xs italic"><%= @search.errors[:latitude].join(' / ') %></p>
    <% end %>
    
    <%= f.label :longitude, "longitude",class: "block text-gray-700 text-sm font-bold mb-1 mt-3" %>
    <%= f.number_field :longitude, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <% if @search.errors[:longitude] .present? %>
      <p class="text-red-500 text-xs italic"><%= @search.errors[:longitude].join(' / ') %></p>
    <% end %>
    
    <%= f.label :radius, "radius",class: "block text-gray-700 text-sm font-bold mb-1 mt-3" %>
    <%= f.number_field :radius, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <% if @search.errors[:radius] .present? %>
      <p class="text-red-500 text-xs italic"><%= @search.errors[:radius].join(' / ') %></p>
    <% end %>

    <%= f.submit "Search", class: "cursor-pointer bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-full mt-3" %>
  <% end %>
</div>